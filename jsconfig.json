{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "~/components/*": ["components/*"],
      "~/libs/*": ["libs/*"],
      "~/styles/*": ["styles/*"],
      "~/data/*": ["data/*"],
      "~/utils/*": ["utils/*"]
    },
    "moduleResolution": "node",
    "strict": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "jsxImportSource": "true"
  },
  "exclude": ["node_modules", ".next"]
}
